/* 第一部分 */
.first_box {
  width: 750rpx;
  height: 100rpx;
  border-top: 1px solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.first_box .left_box {
  width: 310rpx;
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-left: 20rpx;
}

.first_box .left_box .left_img {
  width: 28rpx;
  height: 28rpx;
}

.first_box .left_box .left_word {
  font-size: medium;
  color: rgba(0, 0, 0, 0.8);
}

.first_box .right_box {
  width: 439rpx;
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-right: 50rpx;
}

.first_box .right_box .right_word {
  font-size: small;
  color: #ccc;
}

.first_box .right_box .right_img {
  width: 24rpx;
  height: 24rpx;
  margin-right: 5rpx;
}

/* 第二部分 */
.s_box {
  width: 690rpx;
  height: 550rpx;
  padding: 0 27rpx;
  border-radius:50rpx;
  margin-top: 20rpx;
  position: relative;
  box-shadow: 10rpx 10rpx 10rpx #ccc;
}

.s_box .s_img {
  width: 690rpx;
  height: 425rpx;
  padding: 0 27rpx;
  border-top-left-radius:50rpx;
  border-top-right-radius:50rpx;
}

.smallimg {
  width: 134rpx;
  height: 50rpx;
  background-color: rgba(0, 0, 0, 0.4);
  position: absolute;
  top: 350rpx;
  left: 550rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.smallimg .fire {
  width: 18rpx;
  height: 24rpx;
}

.smallimg .number {
  color: #ccc;
  font-size: medium;
}

.bottom_box {
  width: 100%;
  height: 127rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.bottom_box .left_box {
  width: 284rpx;
  height: 127rpx;
  margin-top:20rpx;
  margin-left: 40rpx;
}

.bottom_box .left_box .name {

  font-size: large;
}

.bottom_box .left_box .price {
  color: red;
  font-size: large;
}

.bottom_box .right_box {
  width: 300rpx;
  height: 90rpx;
  margin-bottom:40rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.bottom_box .right_box .cancle {
  width: 39rpx;
  height: 35rpx;
}

.bottom_box .right_box .cancle_word {
  font-size: medium;
  color: #ccc;
}
.third_box{
  width: 700rpx;
  height: 550rpx;
  padding: 0 20rpx;
  margin-top: 50rpx;
  box-shadow: 10rpx 10rpx 10rpx #ccc;
  border-top-left-radius:50rpx;
  border-top-right-radius:50rpx;
}
.t_img{
  /* margin-top: 30rpx; */
  width: 700rpx;
  height: 430rpx;
  padding: 0 20rpx;
  border-top-left-radius:50rpx;
  border-top-right-radius:50rpx;
}